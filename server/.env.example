# Server Configuration
PORT=8000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/sports-fitness-tracker
DB_NAME=sports-fitness-tracker

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# JWT Secret (if using JWT)
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Fitbit OAuth Configuration
# Get these from https://dev.fitbit.com/apps
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
FITBIT_REDIRECT_URI=http://localhost:8000/api/v1/oauth/fitbit/callback

# Client URL (for redirects)
CLIENT_URL=http://localhost:5173

# CORS Settings
CORS_ORIGIN=http://localhost:5173
